@page "/"

<PageTitle>Dashboard</PageTitle>

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h4 mb-1">Dashboard</h1>
        <div class="text-secondary small">Project overview and key metrics</div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <!-- KPI Cards -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-secondary small mb-1">Total Projects</div>
                    <div class="fs-3 fw-semibold">@stats.TotalProjects</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-secondary small mb-1">Active Projects</div>
                    <div class="fs-3 fw-semibold text-primary">@stats.ActiveProjects</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-secondary small mb-1">Equipment</div>
                    <div class="fs-3 fw-semibold">@stats.TotalEquipment</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-secondary small mb-1">Points</div>
                    <div class="fs-3 fw-semibold">@stats.TotalPoints</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Breakdown -->
    @if (stats.ProjectsByStatus.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Projects by Status</h5>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    @foreach (var status in stats.ProjectsByStatus.OrderByDescending(s => s.Value))
                    {
                        <div class="col-12 col-md-4 col-lg-3">
                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                <span class="text-secondary small">@status.Key</span>
                                <span class="fw-semibold">@status.Value</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Recent Projects -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Projects</h5>
            <a href="/projects" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        <div class="card-body p-0">
            @if (recentProjects.Data.Count == 0)
            {
                <div class="p-4 text-center text-secondary">
                    <p class="mb-0">No projects yet. <a href="/projects">Create your first project</a></p>
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th style="width: 120px">Project #</th>
                        <th>Name</th>
                        <th style="width: 120px">Status</th>
                        <th style="width: 150px">Start Date</th>
                        <th style="width: 150px">Completion</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var project in recentProjects.Data)
                    {
                        <tr style="cursor: pointer" @onclick="@(() => Nav.NavigateTo($"/projects/{project.ProjectId}"))">
                            <td class="fw-semibold">@project.ProjectNumber</td>
                            <td>@project.ProjectName</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(project.Status)">@project.Status</span>
                            </td>
                            <td class="text-secondary small">
                                @(project.StartDate?.ToString("MMM d, yyyy") ?? "-")
                            </td>
                            <td class="text-secondary small">
                                @(project.EstimatedCompletion?.ToString("MMM d, yyyy") ?? "-")
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

@code {
    [Inject] private IProjectsService Projects { get; set; } = null!;
    [Inject] private NavigationManager Nav { get; set; } = null!;

    private bool isLoading = true;
    private DashboardStatsDto stats = new();
    private PaginatedResponse<ProjectListItemDto> recentProjects = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardDataAsync();
    }

    private async Task LoadDashboardDataAsync()
    {
        isLoading = true;
        try
        {
            stats = await Projects.GetDashboardStatsAsync(CancellationToken.None);
            recentProjects = await Projects.ListAsync(skip: 0, take: 10, status: null, searchTerm: null, ct: CancellationToken.None);
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadgeClass(string? status)
    {
        return status?.ToLowerInvariant() switch
        {
            "active" or "in progress" => "text-bg-primary",
            "completed" => "text-bg-success",
            "on hold" => "text-bg-warning",
            "cancelled" => "text-bg-danger",
            _ => "text-bg-secondary"
        };
    }
}
