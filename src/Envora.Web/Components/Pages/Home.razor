@page "/"

<PageTitle>Home</PageTitle>

<div class="d-flex align-items-center justify-content-between">
    <div>
        <h1 class="h4 mb-1">Dashboard</h1>
        <div class="text-secondary small">Phase 1 starter dashboard</div>
    </div>
</div>

<div class="mt-3 row g-3">
    <div class="col-12 col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-secondary small">Projects</div>
                <div class="fs-3 fw-semibold">@TotalProjects</div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] private IProjectsService Projects { get; set; } = null!;

    private int TotalProjects { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var page = await Projects.ListAsync(skip: 0, take: 1, status: null, searchTerm: null, ct: CancellationToken.None);
        TotalProjects = page.Total;
    }
}
