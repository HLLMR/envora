@page "/"

<PageTitle>Dashboard</PageTitle>

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h4 mb-1">Dashboard</h1>
        <div class="text-secondary small">Project overview and key metrics</div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <!-- Section 1: KPIs (Top, Full Width) -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-secondary small mb-1">In Progress Projects</div>
                    <div class="fs-2 fw-semibold" style="color: var(--envora-primary);">@stats.ActiveProjects</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-secondary small mb-1">At Risk Projects</div>
                    <div class="fs-2 fw-semibold" style="color: var(--envora-warning);">0</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-secondary small mb-1">Pending Submittals</div>
                    <div class="fs-2 fw-semibold" style="color: var(--envora-accent);">0</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-secondary small mb-1">Pending Approvals</div>
                    <div class="fs-2 fw-semibold" style="color: var(--envora-accent);">0</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section 2 & 3: Priority Queue (Left) + Recent Projects (Right) -->
    <div class="row g-4">
        <!-- My Priority Queue (Left Column) -->
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-semibold">My Priority Queue</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="text-secondary small mb-2 fw-semibold">Overdue</div>
                        <div class="text-secondary small">No overdue items</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-secondary small mb-2 fw-semibold">Due Today</div>
                        <div class="text-secondary small">No items due today</div>
                    </div>
                    <div>
                        <div class="text-secondary small mb-2 fw-semibold">Upcoming</div>
                        <div class="text-secondary small">No upcoming items</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Projects (Right Column) -->
        <div class="col-12 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">Recent Projects</h5>
                    <a href="/projects" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (recentProjects.Data.Count == 0)
                    {
                        <div class="p-4 text-center text-secondary">
                            <p class="mb-0">No projects yet. <a href="/projects">Create your first project</a></p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var project in recentProjects.Data)
                            {
                                <a href="@($"/projects/{project.ProjectId}/overview")" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="fw-semibold">@project.ProjectNumber</div>
                                            <div class="text-secondary small">@project.ProjectName</div>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge @GetStatusBadgeClass(project.Status)">@project.Status</span>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject] private IProjectsService Projects { get; set; } = null!;
    [Inject] private NavigationManager Nav { get; set; } = null!;

    private bool isLoading = true;
    private DashboardStatsDto stats = new();
    private PaginatedResponse<ProjectListItemDto> recentProjects = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardDataAsync();
    }

    private async Task LoadDashboardDataAsync()
    {
        isLoading = true;
        try
        {
            stats = await Projects.GetDashboardStatsAsync(CancellationToken.None);
        }
        catch (ApiException)
        {
            // If dashboard stats endpoint doesn't exist, use empty stats
            stats = new DashboardStatsDto();
        }
        catch (Exception)
        {
            // Handle other errors gracefully
            stats = new DashboardStatsDto();
        }
        
        try
        {
            recentProjects = await Projects.ListAsync(skip: 0, take: 10, status: null, searchTerm: null, ct: CancellationToken.None);
        }
        catch (ApiException)
        {
            // If projects list fails, use empty list
            recentProjects = new PaginatedResponse<ProjectListItemDto> { Data = new List<ProjectListItemDto>() };
        }
        catch (Exception)
        {
            // Handle other errors gracefully
            recentProjects = new PaginatedResponse<ProjectListItemDto> { Data = new List<ProjectListItemDto>() };
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadgeClass(string? status)
    {
        return status?.ToLowerInvariant() switch
        {
            "active" or "in progress" => "text-bg-primary",
            "completed" => "text-bg-success",
            "on hold" => "text-bg-warning",
            "cancelled" => "text-bg-danger",
            _ => "text-bg-secondary"
        };
    }
}
