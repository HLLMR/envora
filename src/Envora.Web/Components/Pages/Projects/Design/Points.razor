@page "/projects/{ProjectId:guid}/design/equipment/{EquipmentId:guid}/points"

<PageTitle>Points</PageTitle>

<div class="d-flex align-items-start justify-content-between gap-3 flex-wrap">
    <div>
        <h1 class="h4 mb-1">Design ¬∑ Points</h1>
        <div class="text-secondary small">Project: @ProjectId ¬∑ Equipment: @EquipmentId</div>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary" @onclick="@(() => Nav.NavigateTo($"/projects/{ProjectId}/design/equipment"))">Back to Equipment</button>
    </div>
</div>

<div class="card mt-3">
    <div class="card-body">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-4">
                <label class="form-label small text-secondary">Point Tag</label>
                <input class="form-control" @bind="Create.PointTag" />
            </div>
            <div class="col-12 col-md-2">
                <label class="form-label small text-secondary">Source</label>
                <select class="form-select" @bind="Create.SourceType">
                    <option value="SoftPoint">SoftPoint</option>
                    <option value="HardPoint">HardPoint</option>
                </select>
            </div>
            <div class="col-12 col-md-2">
                <label class="form-label small text-secondary">Type</label>
                <select class="form-select" @bind="Create.DataType">
                    <option value="AnalogInput">AnalogInput</option>
                    <option value="AnalogOutput">AnalogOutput</option>
                    <option value="DigitalInput">DigitalInput</option>
                    <option value="DigitalOutput">DigitalOutput</option>
                    <option value="Integer">Integer</option>
                    <option value="Real">Real</option>
                    <option value="String">String</option>
                    <option value="Enumeration">Enumeration</option>
                </select>
            </div>
            <div class="col-12 col-md-2">
                <label class="form-label small text-secondary">Unit</label>
                <input class="form-control" @bind="Create.Unit" />
            </div>
            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary" @onclick="CreatePointAsync" disabled="@IsCreating">Add</button>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Error))
        {
            <div class="alert alert-danger mt-3 mb-0">@Error</div>
        }
    </div>
</div>

<div class="card mt-3">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
            <tr>
                <th style="width: 280px">Tag</th>
                <th style="width: 140px">Source</th>
                <th style="width: 180px">Data type</th>
                <th style="width: 120px">Unit</th>
                <th style="width: 100px">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (IsLoading)
            {
                <tr><td colspan="5" class="p-4 text-secondary">Loading‚Ä¶</td></tr>
            }
            else if (List.Data.Count == 0)
            {
                <tr><td colspan="5" class="p-4 text-secondary">No points yet.</td></tr>
            }
            else
            {
                @foreach (var p in List.Data)
                {
                    <tr>
                        <td class="fw-semibold">@p.PointTag</td>
                        <td><span class="badge text-bg-secondary">@p.SourceType</span></td>
                        <td>@p.DataType</td>
                        <td>@p.Unit</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-sm btn-outline-primary" @onclick="@(() => ShowEditModal(p))" title="Edit">‚úèÔ∏è</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeletePointAsync(p.PointId))" title="Delete">üóëÔ∏è</button>
                            </div>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

<!-- Edit Modal -->
@if (showEditModal && editingPoint != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Point</h5>
                    <button type="button" class="btn-close" @onclick="HideEditModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@editRequest" OnValidSubmit="HandleUpdate">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Point Type</label>
                            <InputText class="form-control" @bind-Value="editRequest.PointType" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Data Type</label>
                            <InputSelect class="form-select" @bind-Value="editRequest.DataType">
                                <option value="AnalogInput">AnalogInput</option>
                                <option value="AnalogOutput">AnalogOutput</option>
                                <option value="DigitalInput">DigitalInput</option>
                                <option value="DigitalOutput">DigitalOutput</option>
                                <option value="Integer">Integer</option>
                                <option value="Real">Real</option>
                                <option value="String">String</option>
                                <option value="Enumeration">Enumeration</option>
                            </InputSelect>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Unit</label>
                            <InputText class="form-control" @bind-Value="editRequest.Unit" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="editRequest.PointDescription" />
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="HideEditModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isUpdating">@(isUpdating ? "Saving..." : "Save")</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public Guid ProjectId { get; set; }
    [Parameter] public Guid EquipmentId { get; set; }

    [Inject] private IPointsService PointsApi { get; set; } = null!;
    [Inject] private NavigationManager Nav { get; set; } = null!;

    private bool IsLoading { get; set; } = true;
    private bool IsCreating { get; set; }
    private bool isUpdating { get; set; }
    private bool showEditModal { get; set; }
    private string? Error { get; set; }

    private ListResponse<PointDto> List { get; set; } = new();
    private CreatePointRequest Create { get; set; } = new() { SourceType = "SoftPoint", PointType = "Input", DataType = "AnalogInput" };
    private PointDto? editingPoint;
    private UpdatePointRequest editRequest = new();

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        Error = null;
        IsLoading = true;
        try
        {
            List = await PointsApi.ListAsync(ProjectId, EquipmentId, CancellationToken.None);
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task CreatePointAsync()
    {
        Error = null;
        IsCreating = true;
        try
        {
            await PointsApi.CreateAsync(ProjectId, EquipmentId, Create, CancellationToken.None);
            Create = new CreatePointRequest { SourceType = Create.SourceType, PointType = Create.PointType, DataType = Create.DataType };
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            IsCreating = false;
        }
    }

    private void ShowEditModal(PointDto point)
    {
        editingPoint = point;
        editRequest = new UpdatePointRequest
        {
            PointType = point.PointType,
            DataType = point.DataType,
            Unit = point.Unit,
            PointDescription = point.PointDescription
        };
        showEditModal = true;
    }

    private void HideEditModal()
    {
        showEditModal = false;
        editingPoint = null;
    }

    private async Task HandleUpdate()
    {
        if (editingPoint == null) return;

        Error = null;
        isUpdating = true;
        try
        {
            var updated = await PointsApi.UpdateAsync(ProjectId, EquipmentId, editingPoint.PointId, editRequest, CancellationToken.None);
            if (updated != null)
            {
                await ReloadAsync();
                HideEditModal();
            }
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            isUpdating = false;
        }
    }

    private async Task DeletePointAsync(Guid pointId)
    {
        // TODO: Add proper confirmation dialog
        Error = null;
        try
        {
            var deleted = await PointsApi.DeleteAsync(ProjectId, EquipmentId, pointId, CancellationToken.None);
            if (deleted)
            {
                await ReloadAsync();
            }
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
    }
}


