@page "/projects/{ProjectId:guid}/design/equipment"
@layout Layout.ProjectLayout

<PageTitle>Equipment</PageTitle>

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h4 mb-1">Design ¬∑ Equipment</h1>
    </div>
</div>

<!-- Discipline Tabs -->
<ul class="nav nav-tabs mb-4" role="tablist">
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link active" href="@($"/projects/{ProjectId}/design/equipment")">Equipment</NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Points <span class="badge bg-secondary">v2</span></NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Schedules <span class="badge bg-secondary">v2</span></NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Drawings <span class="badge bg-secondary">v2</span></NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Sequences <span class="badge bg-secondary">v2</span></NavLink>
    </li>
</ul>

<div class="card">
    <div class="card-body">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-3">
                <label class="form-label small text-secondary">Tag</label>
                <input class="form-control" @bind="Create.EquipmentTag" />
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small text-secondary">Type</label>
                <select class="form-select" @bind="Create.EquipmentType">
                    <option value="AHU">AHU</option>
                    <option value="RTU">RTU</option>
                    <option value="VAV">VAV</option>
                    <option value="Pump">Pump</option>
                    <option value="Fan">Fan</option>
                    <option value="Chiller">Chiller</option>
                    <option value="Boiler">Boiler</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label small text-secondary">Location</label>
                <input class="form-control" @bind="Create.Location" />
            </div>
            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary" @onclick="CreateEquipmentAsync" disabled="@IsCreating">Add</button>
            </div>
        </div>

        <ErrorAlert Error="@Error" ValidationErrors="@ValidationErrors" OnDismiss="() => { Error = null; ValidationErrors = null; }" />
    </div>
</div>

<div class="card mt-3">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
            <tr>
                <th style="width: 180px">Tag</th>
                <th style="width: 140px">Type</th>
                <th>Location</th>
                <th style="width: 100px">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (IsLoading)
            {
                <tr><td colspan="4" class="p-4 text-secondary">Loading‚Ä¶</td></tr>
            }
            else if (List.Data.Count == 0)
            {
                <tr><td colspan="4" class="p-4 text-secondary">No equipment yet.</td></tr>
            }
            else
            {
                @foreach (var e in List.Data)
                {
                    <tr>
                        <td class="fw-semibold" style="cursor: pointer" @onclick="@(() => Nav.NavigateTo($"/projects/{ProjectId}/design/equipment/{e.EquipmentId}/points"))">@e.EquipmentTag</td>
                        <td style="cursor: pointer" @onclick="@(() => Nav.NavigateTo($"/projects/{ProjectId}/design/equipment/{e.EquipmentId}/points"))"><span class="badge text-bg-secondary">@e.EquipmentType</span></td>
                        <td style="cursor: pointer" @onclick="@(() => Nav.NavigateTo($"/projects/{ProjectId}/design/equipment/{e.EquipmentId}/points"))">@e.Location</td>
                        <td>
                            <div class="btn-group btn-group-sm" @onclick:stopPropagation="true">
                                <button class="btn btn-sm btn-outline-primary" @onclick="@(() => ShowEditModal(e))" title="Edit">‚úèÔ∏è</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeleteEquipmentAsync(e.EquipmentId))" title="Delete">üóëÔ∏è</button>
                            </div>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>


<!-- Edit Modal -->
@if (showEditModal && editingEquipment != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Equipment</h5>
                    <button type="button" class="btn-close" @onclick="HideEditModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@editRequest" OnValidSubmit="HandleUpdate">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Tag</label>
                            <InputText class="form-control" @bind-Value="editRequest.EquipmentTag" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <InputSelect class="form-select" @bind-Value="editRequest.EquipmentType">
                                <option value="AHU">AHU</option>
                                <option value="RTU">RTU</option>
                                <option value="VAV">VAV</option>
                                <option value="Pump">Pump</option>
                                <option value="Fan">Fan</option>
                                <option value="Chiller">Chiller</option>
                                <option value="Boiler">Boiler</option>
                                <option value="Other">Other</option>
                            </InputSelect>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Manufacturer</label>
                            <InputText class="form-control" @bind-Value="editRequest.Manufacturer" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Model</label>
                            <InputText class="form-control" @bind-Value="editRequest.Model" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Location</label>
                            <InputText class="form-control" @bind-Value="editRequest.Location" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="editRequest.Description" />
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="HideEditModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isUpdating">@(isUpdating ? "Saving..." : "Save")</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public Guid ProjectId { get; set; }
    [Inject] private IEquipmentService EquipmentApi { get; set; } = null!;
    [Inject] private NavigationManager Nav { get; set; } = null!;

    private bool IsLoading { get; set; } = true;
    private bool IsCreating { get; set; }
    private bool isUpdating { get; set; }
    private bool isDeleting { get; set; }
    private bool showEditModal { get; set; }
    private string? Error { get; set; }
    private List<string>? ValidationErrors { get; set; }

    private ListResponse<EquipmentDto> List { get; set; } = new();
    private CreateEquipmentRequest Create { get; set; } = new() { EquipmentType = "AHU" };
    private EquipmentDto? editingEquipment;
    private UpdateEquipmentRequest editRequest = new();

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        Error = null;
        ValidationErrors = null;
        IsLoading = true;
        try
        {
            List = await EquipmentApi.ListAsync(ProjectId, CancellationToken.None);
        }
        catch (ApiException ex)
        {
            Error = ex.Message;
            ValidationErrors = ex.ValidationErrors;
        }
        catch (Exception ex)
        {
            Error = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task CreateEquipmentAsync()
    {
        Error = null;
        ValidationErrors = null;
        IsCreating = true;
        try
        {
            await EquipmentApi.CreateAsync(ProjectId, Create, CancellationToken.None);
            Create = new CreateEquipmentRequest { EquipmentType = Create.EquipmentType };
            await ReloadAsync();
        }
        catch (ApiException ex)
        {
            Error = ex.Message;
            ValidationErrors = ex.ValidationErrors;
        }
        catch (Exception ex)
        {
            Error = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            IsCreating = false;
        }
    }

    private void ShowEditModal(EquipmentDto equipment)
    {
        editingEquipment = equipment;
        editRequest = new UpdateEquipmentRequest
        {
            EquipmentTag = equipment.EquipmentTag,
            EquipmentType = equipment.EquipmentType,
            Manufacturer = equipment.Manufacturer,
            Model = equipment.Model,
            Location = equipment.Location,
            Description = equipment.Description
        };
        showEditModal = true;
    }

    private void HideEditModal()
    {
        showEditModal = false;
        editingEquipment = null;
    }

    private async Task HandleUpdate()
    {
        if (editingEquipment == null) return;

        Error = null;
        ValidationErrors = null;
        isUpdating = true;
        try
        {
            var updated = await EquipmentApi.UpdateAsync(ProjectId, editingEquipment.EquipmentId, editRequest, CancellationToken.None);
            if (updated != null)
            {
                await ReloadAsync();
                HideEditModal();
            }
        }
        catch (ApiException ex)
        {
            Error = ex.Message;
            ValidationErrors = ex.ValidationErrors;
        }
        catch (Exception ex)
        {
            Error = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            isUpdating = false;
        }
    }

    private async Task DeleteEquipmentAsync(Guid equipmentId)
    {
        // TODO: Add proper confirmation dialog
        Error = null;
        ValidationErrors = null;
        isDeleting = true;
        try
        {
            var deleted = await EquipmentApi.DeleteAsync(ProjectId, equipmentId, CancellationToken.None);
            if (deleted)
            {
                await ReloadAsync();
            }
            else
            {
                Error = "Failed to delete equipment. It may not exist.";
            }
        }
        catch (ApiException ex)
        {
            Error = ex.Message;
            ValidationErrors = ex.ValidationErrors;
        }
        catch (Exception ex)
        {
            Error = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
        }
    }
}


