@page "/projects/{ProjectId:guid}/service"
@layout Layout.ProjectLayout

<PageTitle>Service</PageTitle>

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h4 mb-1">Service</h1>
        <div class="text-secondary small">Project: @ProjectId</div>
    </div>
</div>

<!-- Discipline Tabs -->
<ul class="nav nav-tabs mb-4" role="tablist">
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link active" href="@($"/projects/{ProjectId}/service")">RFIs</NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link" href="@($"/projects/{ProjectId}/service/issues")">Issues</NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link" href="@($"/projects/{ProjectId}/service/ioms")">IOMs</NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Commissioning <span class="badge bg-secondary">v2</span></NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Warranty Claims <span class="badge bg-secondary">v2</span></NavLink>
    </li>
</ul>

<div class="card">
    <div class="card-body">
        <div class="text-center py-5 text-secondary">
            <p class="mb-0">Service discipline coming soon.</p>
            <p class="small mt-2">This will include RFIs, issues, IOMs, commissioning, and warranty claims.</p>
        </div>
    </div>
</div>

@code {
    [Parameter] public Guid ProjectId { get; set; }
}

