@page "/projects/{ProjectId:guid}"

<PageTitle>Project</PageTitle>

<div class="d-flex align-items-center justify-content-between">
    <div>
        <h1 class="h4 mb-1">Project</h1>
        <div class="text-secondary small">@ProjectId</div>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary" @onclick="@(() => Nav.NavigateTo($"/projects/{ProjectId}/design/equipment"))">
            Design â†’ Equipment
        </button>
    </div>
</div>

<div class="card mt-3">
    <div class="card-body">
        <div class="text-secondary small">Disciplines</div>
        <div class="d-flex gap-2 flex-wrap mt-2">
            <a class="btn btn-sm btn-outline-secondary" href="@($"/projects/{ProjectId}/overview")">Overview</a>
            <a class="btn btn-sm btn-outline-secondary" href="@($"/projects/{ProjectId}/financial")">Financial</a>
            <a class="btn btn-sm btn-outline-secondary" href="@($"/projects/{ProjectId}/schedule")">Schedule</a>
            <a class="btn btn-sm btn-primary" href="@($"/projects/{ProjectId}/design/equipment")">Design</a>
            <a class="btn btn-sm btn-outline-secondary" href="@($"/projects/{ProjectId}/service")">Service</a>
        </div>
        <div class="mt-3 text-secondary small">
            Phase 1: project detail shell. (Next: align to full discipline/tab layout from the UI/UX plan + persistent notes.)
        </div>
    </div>
</div>

@code {
    [Parameter] public Guid ProjectId { get; set; }
    [Inject] private NavigationManager Nav { get; set; } = null!;
}


