@page "/projects/{ProjectId:guid}/financial"
@layout Layout.ProjectLayout

<PageTitle>Financial</PageTitle>

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h4 mb-1">Financial</h1>
        <div class="text-secondary small">Project: @ProjectId</div>
    </div>
</div>

<!-- Discipline Tabs -->
<ul class="nav nav-tabs mb-4" role="tablist">
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link active" href="@($"/projects/{ProjectId}/financial")">Financials</NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Budget <span class="badge bg-secondary">v2</span></NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Costs <span class="badge bg-secondary">v2</span></NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Change Orders <span class="badge bg-secondary">v2</span></NavLink>
    </li>
    <li class="nav-item" role="presentation">
        <NavLink class="nav-link disabled" href="#">Invoices <span class="badge bg-secondary">v2</span></NavLink>
    </li>
</ul>

<div class="card">
    <div class="card-body">
        <div class="text-center py-5 text-secondary">
            <p class="mb-0">Financial discipline coming soon.</p>
            <p class="small mt-2">This will include contracts, budget, costs, change orders, and invoices.</p>
        </div>
    </div>
</div>

@code {
    [Parameter] public Guid ProjectId { get; set; }
}

