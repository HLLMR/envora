@page "/projects/{ProjectId:guid}/overview"
@layout Layout.ProjectLayout

<PageTitle>Project Overview</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <ErrorAlert Error="@errorMessage" ValidationErrors="@validationErrors" />
    <div class="mt-3">
        <a href="/projects" class="btn btn-outline-secondary">← Back to Projects</a>
    </div>
}
else if (project == null)
{
    <div class="alert alert-warning">Project not found.</div>
    <div class="mt-3">
        <a href="/projects" class="btn btn-outline-secondary">← Back to Projects</a>
    </div>
}
else
{
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h4 mb-1">@project.ProjectName</h1>
            <div class="text-secondary small">@project.ProjectNumber</div>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <span class="badge @GetStatusBadgeClass(project.Status)">@project.Status</span>
            <button class="btn btn-sm btn-outline-primary" @onclick="ShowEditModal">Edit</button>
        </div>
    </div>

    <!-- Edit Modal -->
    @if (showEditModal)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Project</h5>
                        <button type="button" class="btn-close" @onclick="HideEditModal"></button>
                    </div>
                    <div class="modal-body">
                        <ErrorAlert Error="@updateError" ValidationErrors="@updateValidationErrors" OnDismiss="() => { updateError = null; updateValidationErrors = null; }" />
                        <EditForm Model="@editRequest" OnValidSubmit="HandleUpdate">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label">Project Name *</label>
                                <InputText class="form-control" @bind-Value="editRequest.ProjectName" />
                                <ValidationMessage For="() => editRequest.ProjectName" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <InputTextArea class="form-control" rows="3" @bind-Value="editRequest.Description" />
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Status *</label>
                                    <InputSelect class="form-select" @bind-Value="editRequest.Status">
                                        <option value="Conceptual">Conceptual</option>
                                        <option value="Design">Design</option>
                                        <option value="Bidding">Bidding</option>
                                        <option value="Awarded">Awarded</option>
                                        <option value="Procurement">Procurement</option>
                                        <option value="Installation">Installation</option>
                                        <option value="Startup">Startup</option>
                                        <option value="Complete">Complete</option>
                                    </InputSelect>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Budget Amount</label>
                                    <InputNumber class="form-control" @bind-Value="editRequest.BudgetAmount" />
                                </div>
                            </div>
                            <div class="row g-3 mt-2">
                                <div class="col-md-4">
                                    <label class="form-label">Start Date</label>
                                    <InputDate class="form-control" @bind-Value="editRequest.StartDate" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Estimated Completion</label>
                                    <InputDate class="form-control" @bind-Value="editRequest.EstimatedCompletion" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Actual Completion</label>
                                    <InputDate class="form-control" @bind-Value="editRequest.ActualCompletion" />
                                </div>
                            </div>
                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">Location</label>
                                    <InputText class="form-control" @bind-Value="editRequest.Location" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Building Type</label>
                                    <InputText class="form-control" @bind-Value="editRequest.BuildingType" />
                                </div>
                            </div>
                            <div class="mb-3 mt-3">
                                <label class="form-label">Square Footage</label>
                                <InputNumber class="form-control" @bind-Value="editRequest.SquareFootage" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Notes</label>
                                <InputTextArea class="form-control" rows="3" @bind-Value="editRequest.Notes" />
                            </div>
                            <div class="d-flex justify-content-end gap-2">
                                <button type="button" class="btn btn-secondary" @onclick="HideEditModal">Cancel</button>
                                <button type="submit" class="btn btn-primary" disabled="@isUpdating">@(isUpdating ? "Saving..." : "Save")</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Discipline Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "summary" ? "active" : "")" @onclick="@(() => activeTab = "summary")">Summary</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "team" ? "active" : "")" @onclick="@(() => activeTab = "team")">Team</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "documents" ? "active" : "")" @onclick="@(() => activeTab = "documents")">Documents</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "activity" ? "active" : "")" @onclick="@(() => activeTab = "activity")">Activity</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "notes" ? "active" : "")" @onclick="@(() => activeTab = "notes")">Notes</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "settings" ? "active" : "")" @onclick="@(() => activeTab = "settings")">Settings</button>
        </li>
    </ul>

    <!-- Tab Content -->
    @if (activeTab == "summary")
    {
        <div class="row g-4">
        <!-- Project Information -->
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Project Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@(project.Description ?? "-")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @GetStatusBadgeClass(project.Status)">@project.Status</span>
                        </dd>

                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@(project.StartDate?.ToString("MMM d, yyyy") ?? "-")</dd>

                        <dt class="col-sm-4">Estimated Completion</dt>
                        <dd class="col-sm-8">@(project.EstimatedCompletion?.ToString("MMM d, yyyy") ?? "-")</dd>

                        @if (project.ActualCompletion.HasValue)
                        {
                            <dt class="col-sm-4">Actual Completion</dt>
                            <dd class="col-sm-8">@project.ActualCompletion.Value.ToString("MMM d, yyyy")</dd>
                        }

                        <dt class="col-sm-4">Budget</dt>
                        <dd class="col-sm-8">@(project.BudgetAmount?.ToString("C") ?? "-")</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">@(project.Location ?? "-")</dd>

                        <dt class="col-sm-4">Building Type</dt>
                        <dd class="col-sm-8">@(project.BuildingType ?? "-")</dd>

                        @if (project.SquareFootage.HasValue)
                        {
                            <dt class="col-sm-4">Square Footage</dt>
                            <dd class="col-sm-8">@project.SquareFootage.Value.ToString("N0")</dd>
                        }

                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@(project.CustomerName ?? "-")</dd>

                        <dt class="col-sm-4">Engineering Firm</dt>
                        <dd class="col-sm-8">@(project.EngineeringFirmName ?? "-")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Team Assignments -->
        <div class="col-12 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Team</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="text-secondary small mb-1">Project Manager</div>
                        <div>
                            @if (!string.IsNullOrWhiteSpace(project.ProjectManagerName))
                            {
                                <div>@project.ProjectManagerName</div>
                                @if (!string.IsNullOrWhiteSpace(project.ProjectManagerEmail))
                                {
                                    <div class="text-secondary small">@project.ProjectManagerEmail</div>
                                }
                            }
                            else
                            {
                                <span class="text-secondary">Not assigned</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="text-secondary small mb-1">Design Engineer 1</div>
                        <div>
                            @if (!string.IsNullOrWhiteSpace(project.DesignEngineer1Name))
                            {
                                <div>@project.DesignEngineer1Name</div>
                                @if (!string.IsNullOrWhiteSpace(project.DesignEngineer1Email))
                                {
                                    <div class="text-secondary small">@project.DesignEngineer1Email</div>
                                }
                            }
                            else
                            {
                                <span class="text-secondary">Not assigned</span>
                            }
                        </div>
                    </div>

                    <div>
                        <div class="text-secondary small mb-1">Design Engineer 2</div>
                        <div>
                            @if (!string.IsNullOrWhiteSpace(project.DesignEngineer2Name))
                            {
                                <div>@project.DesignEngineer2Name</div>
                                @if (!string.IsNullOrWhiteSpace(project.DesignEngineer2Email))
                                {
                                    <div class="text-secondary small">@project.DesignEngineer2Email</div>
                                }
                            }
                            else
                            {
                                <span class="text-secondary">Not assigned</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    else if (activeTab == "team")
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Team</h5>
            </div>
            <div class="card-body">
                <p class="text-secondary">Team management coming soon.</p>
            </div>
        </div>
    }
    else if (activeTab == "documents")
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Documents</h5>
            </div>
            <div class="card-body">
                <p class="text-secondary">Document management coming soon.</p>
            </div>
        </div>
    }
    else if (activeTab == "activity")
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Activity</h5>
            </div>
            <div class="card-body">
                <p class="text-secondary">Activity log coming soon.</p>
            </div>
        </div>
    }
    else if (activeTab == "notes")
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Notes</h5>
            </div>
            <div class="card-body">
                <p class="text-secondary">Notes are available in the panel at the bottom of the page.</p>
            </div>
        </div>
    }
    else if (activeTab == "settings")
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Settings</h5>
            </div>
            <div class="card-body">
                <p class="text-secondary">Project settings coming soon.</p>
            </div>
        </div>
    }

}

@code {
    [Parameter] public Guid ProjectId { get; set; }
    [Inject] private IProjectsService Projects { get; set; } = null!;

    private bool isLoading = true;
    private bool showEditModal = false;
    private bool isUpdating = false;
    private ProjectDetailDto? project;
    private UpdateProjectRequest editRequest = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProjectAsync();
    }

    private string? errorMessage;
    private List<string>? validationErrors;
    private string activeTab = "summary";

    private async Task LoadProjectAsync()
    {
        isLoading = true;
        errorMessage = null;
        validationErrors = null;
        try
        {
            project = await Projects.GetDetailAsync(ProjectId, CancellationToken.None);
            if (project == null)
            {
                errorMessage = "Project not found.";
            }
        }
        catch (ApiException ex)
        {
            errorMessage = ex.Message;
            validationErrors = ex.ValidationErrors;
            project = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading project: {ex.Message}";
            project = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowEditModal()
    {
        if (project != null)
        {
            editRequest = new UpdateProjectRequest
            {
                ProjectName = project.ProjectName,
                Description = project.Description,
                Status = project.Status,
                StartDate = project.StartDate,
                EstimatedCompletion = project.EstimatedCompletion,
                ActualCompletion = project.ActualCompletion,
                BudgetAmount = project.BudgetAmount,
                Location = project.Location,
                BuildingType = project.BuildingType,
                SquareFootage = project.SquareFootage,
                Notes = project.Notes,
                CustomerId = project.CustomerId,
                EngineeringFirmId = project.EngineeringFirmId,
                ProjectManagerId = project.ProjectManagerId,
                DesignEngineer1Id = project.DesignEngineer1Id,
                DesignEngineer2Id = project.DesignEngineer2Id
            };
            showEditModal = true;
        }
    }

    private void HideEditModal()
    {
        showEditModal = false;
    }

    private string? updateError;
    private List<string>? updateValidationErrors;

    private async Task HandleUpdate()
    {
        updateError = null;
        updateValidationErrors = null;
        isUpdating = true;
        try
        {
            var updated = await Projects.UpdateAsync(ProjectId, editRequest, CancellationToken.None);
            if (updated != null)
            {
                await LoadProjectAsync();
                HideEditModal();
            }
            else
            {
                updateError = "Failed to update project. It may not exist.";
            }
        }
        catch (ApiException ex)
        {
            updateError = ex.Message;
            updateValidationErrors = ex.ValidationErrors;
        }
        catch (Exception ex)
        {
            updateError = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            isUpdating = false;
        }
    }

    private string GetStatusBadgeClass(string? status)
    {
        return status?.ToLowerInvariant() switch
        {
            "active" or "in progress" or "design" or "installation" => "text-bg-primary",
            "completed" or "complete" => "text-bg-success",
            "on hold" or "awarded" => "text-bg-warning",
            "cancelled" => "text-bg-danger",
            _ => "text-bg-secondary"
        };
    }
}

