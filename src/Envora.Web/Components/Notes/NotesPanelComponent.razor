@using Envora.Web.Models.Notes
@using Envora.Web.Services
@implements IAsyncDisposable
@inject INotesService NotesService
@inject IHubConnectionService HubService

<div class="notes-panel">
    <div class="mb-3">
        <h6 class="mb-2 fw-semibold">Notes</h6>
        <EditForm Model="@newNote" OnValidSubmit="HandleCreateNote">
            <DataAnnotationsValidator />
            <div class="mb-2">
                <InputTextArea class="form-control form-control-sm" rows="2" placeholder="Write a note..." @bind-Value="newNote.Content" />
                <ValidationMessage For="() => newNote.Content" />
            </div>
            <div class="d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-sm btn-primary" disabled="@isCreating">@(isCreating ? "Posting..." : "Post")</button>
            </div>
        </EditForm>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-4">
            <div class="spinner-border spinner-border-sm" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (notes.Any())
    {
        <div class="notes-list">
            <div style="max-height: 200px; overflow-y: auto;">
                @foreach (var note in notes.OrderByDescending(n => n.CreatedAt))
                {
                    <div class="border-bottom pb-2 mb-2">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <div class="small">
                                <strong>@note.AuthorName</strong>
                                <span class="text-secondary ms-2">@note.CreatedAt.ToString("MMM d 'at' h:mm tt")</span>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-sm btn-link text-decoration-none p-0 me-2" @onclick="@(() => ToggleReaction(note.NoteId, "üëç"))" title="Like">
                                    üëç @(note.Reactions.GetValueOrDefault("üëç", 0) > 0 ? note.Reactions["üëç"].ToString() : "")
                                </button>
                                <button class="btn btn-sm btn-link text-decoration-none p-0" @onclick="@(() => ToggleReaction(note.NoteId, "‚ù§Ô∏è"))" title="Love">
                                    ‚ù§Ô∏è @(note.Reactions.GetValueOrDefault("‚ù§Ô∏è", 0) > 0 ? note.Reactions["‚ù§Ô∏è"].ToString() : "")
                                </button>
                            </div>
                        </div>
                        <div class="small">@note.Content</div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="text-center text-secondary py-4">
            <p>No notes yet. Be the first to add one!</p>
        </div>
    }
</div>

@code {
    [Parameter] public Guid ProjectId { get; set; }
    [Parameter] public string? Context { get; set; }

    private List<NoteDto> notes = new();
    private bool isLoading = true;
    private bool isCreating = false;
    private CreateNoteRequest newNote = new();

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to SignalR events
        HubService.OnNoteAdded += HandleNoteAdded;
        HubService.OnNoteUpdated += HandleNoteUpdated;
        HubService.OnNoteDeleted += HandleNoteDeleted;
        HubService.OnReactionAdded += HandleReactionAdded;

        // Connect and subscribe to project
        try
        {
            await HubService.ConnectAsync();
            await HubService.SubscribeToProjectAsync(ProjectId);
        }
        catch (Exception ex)
        {
            // Log error but continue - notes will still work via REST API
            Console.WriteLine($"SignalR connection failed: {ex.Message}");
        }

        await LoadNotesAsync();
    }

    private async Task LoadNotesAsync()
    {
        isLoading = true;
        try
        {
            // Parse context to extract discipline (format: "DISCIPLINE:TabName" or just "DISCIPLINE")
            string? discipline = null;
            if (!string.IsNullOrWhiteSpace(Context))
            {
                var parts = Context.Split(':', 2);
                discipline = parts[0].Trim();
            }

            var result = await NotesService.ListAsync(ProjectId, 0, 50, discipline, null, CancellationToken.None);
            notes = result.Data.ToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleCreateNote()
    {
        if (string.IsNullOrWhiteSpace(newNote.Content)) return;

        isCreating = true;
        try
        {
            newNote.ContentContext = Context;
            var created = await NotesService.CreateAsync(ProjectId, newNote, CancellationToken.None);
            notes.Insert(0, created);
            newNote = new CreateNoteRequest();
            StateHasChanged();
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task ToggleReaction(Guid noteId, string emoji)
    {
        try
        {
            var request = new AddReactionRequest { Emoji = emoji };
            var reactions = await NotesService.AddReactionAsync(ProjectId, noteId, request, CancellationToken.None);
            
            // Update the note's reactions
            var note = notes.FirstOrDefault(n => n.NoteId == noteId);
            if (note != null)
            {
                note.Reactions = reactions;
            }
        }
        catch
        {
            // Silently fail for now
        }
    }

    private void HandleNoteAdded(NoteDto note)
    {
        // Only add if it matches our context
        if (note.ContentContext == Context || (Context == null && note.ContentContext == null))
        {
            if (!notes.Any(n => n.NoteId == note.NoteId))
            {
                notes.Insert(0, note);
                InvokeAsync(StateHasChanged);
            }
        }
    }

    private void HandleNoteUpdated(NoteDto note)
    {
        var existing = notes.FirstOrDefault(n => n.NoteId == note.NoteId);
        if (existing != null)
        {
            existing.Content = note.Content;
            existing.EditedAt = note.EditedAt;
            existing.Reactions = note.Reactions;
            InvokeAsync(StateHasChanged);
        }
    }

    private void HandleNoteDeleted(Guid noteId)
    {
        notes.RemoveAll(n => n.NoteId == noteId);
        InvokeAsync(StateHasChanged);
    }

    private void HandleReactionAdded(Guid noteId, Guid userId, string emoji)
    {
        var note = notes.FirstOrDefault(n => n.NoteId == noteId);
        if (note != null)
        {
            // Increment reaction count
            if (note.Reactions.ContainsKey(emoji))
            {
                note.Reactions[emoji]++;
            }
            else
            {
                note.Reactions[emoji] = 1;
            }
            InvokeAsync(StateHasChanged);
        }
    }

    public async ValueTask DisposeAsync()
    {
        HubService.OnNoteAdded -= HandleNoteAdded;
        HubService.OnNoteUpdated -= HandleNoteUpdated;
        HubService.OnNoteDeleted -= HandleNoteDeleted;
        HubService.OnReactionAdded -= HandleReactionAdded;
        await HubService.UnsubscribeFromProjectAsync(ProjectId);
    }
}

